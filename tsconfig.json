{
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["ES2015"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "typeRoots": ["./config/types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.stub.ts"]
}
